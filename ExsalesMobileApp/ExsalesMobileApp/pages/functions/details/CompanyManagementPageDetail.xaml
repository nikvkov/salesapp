<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExsalesMobileApp.pages.functions.details.CompanyManagementPageDetail">
    <ContentPage.Content>
        <StackLayout x:Name="mainContainer">
            
            <Label x:Name="lb_swipeInfo"/>
            <Label x:Name="lb_title"/>
            <Label x:Name="lb_description"/>

            <ActivityIndicator x:Name="ai_ind" IsRunning="True" IsVisible="False"/>
            <ListView BackgroundColor="Aqua" HeightRequest="100" x:Name="lv_companies">
                
            </ListView>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="bt_addCompany"/>
                <Button x:Name="bt_back"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>