<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExsalesMobileApp.pages.AccountPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Image x:Name="logo_image" WidthRequest="200"/>
            <Label x:Name="WelcomeLabel" />
            <StackLayout Orientation="Horizontal">
                <Label x:Name="RoleTextLabel"/>
                <Label x:Name="RoleLabel"/>
            </StackLayout>
            <Label x:Name="lb_personalDataText"/>
            <Button x:Name="bt_PersonalData"/>
            <Label x:Name="lb_functionsText"/>
            <Button x:Name="bt_Functions"/>
            <Button x:Name="bt_back"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>